<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Illinois/Midwest Tour Guide"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExitsActivity"
            android:label="@string/category_exits">

        </activity>
        <activity
            android:name=".PlacesActivity"
            android:label="@string/category_places">

        </activity>
        <activity
            android:name=".RestaurantActivity"
            android:label="@string/category_restaurants">

        </activity>
        <activity
            android:name=".EventsActivity"
            android:label="@string/category_events">

        </activity>
    </application>

</manifest>