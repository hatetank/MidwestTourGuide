<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_image_width"
        android:layout_height="@dimen/list_image_height"
        android:background="@android:color/black" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/list_item_height"
        android:orientation="vertical"
        android:paddingBottom="@dimen/list_item_padding"
        android:paddingLeft="@dimen/list_item_left_padding"
        android:paddingTop="@dimen/list_item_padding">

        <TextView
            android:id="@+id/highlight_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@color/text_color"
            android:textSize="@dimen/category_text_size"
            android:textStyle="bold"
            tools:text="@string/miwok_word" />

        <TextView
            android:id="@+id/highlight_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/category_text_size"
            tools:text="@string/default_word" />
    </LinearLayout>


</LinearLayout>